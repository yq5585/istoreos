From 496cfa06c951fbf20929e08486c4ee89941b25b9 Mon Sep 17 00:00:00 2001
From: jjm2473 <1129525450@qq.com>
Date: Tue, 6 Jun 2023 21:02:52 +0800
Subject: [PATCH] drivers/stmmac: dwmac4 ignore vlan filter on promisc mode

---
 .../net/ethernet/stmicro/stmmac/dwmac4_core.c | 31 +++++++++----------
 1 file changed, 15 insertions(+), 16 deletions(-)

--- a/drivers/net/ethernet/stmicro/stmmac/dwmac4_core.c
+++ b/drivers/net/ethernet/stmicro/stmmac/dwmac4_core.c
@@ -455,6 +455,9 @@ static int dwmac4_add_hw_vlan_rx_fltr(st
 
 	/* Single Rx VLAN Filter */
 	if (hw->num_vlan == 1) {
+		if (hw->vlan_filter[0] == vid)
+			return 0;
+
 		/* For single VLAN filter, VID 0 means VLAN promiscuous */
 		if (vid == 0) {
 			netdev_warn(dev, "Adding VLAN ID 0 is not supported\n");
@@ -467,7 +470,8 @@ static int dwmac4_add_hw_vlan_rx_fltr(st
 		}
 
 		hw->vlan_filter[0] = vid;
-		dwmac4_write_single_vlan(dev, vid);
+		if (!hw->promisc)
+			dwmac4_write_single_vlan(dev, vid);
 
 		return 0;
 	}
@@ -488,7 +492,10 @@ static int dwmac4_add_hw_vlan_rx_fltr(st
 		return -EPERM;
 	}
 
-	ret = dwmac4_write_vlan_filter(dev, hw, index, val);
+	if (!hw->promisc)
+		ret = dwmac4_write_vlan_filter(dev, hw, index, val);
+	else
+		ret = 0;
 
 	if (!ret)
 		hw->vlan_filter[index] = val;
@@ -506,7 +513,8 @@ static int dwmac4_del_hw_vlan_rx_fltr(st
 	if (hw->num_vlan == 1) {
 		if ((hw->vlan_filter[0] & GMAC_VLAN_TAG_VID) == vid) {
 			hw->vlan_filter[0] = 0;
-			dwmac4_write_single_vlan(dev, 0);
+			if (!hw->promisc)
+				dwmac4_write_single_vlan(dev, 0);
 		}
 		return 0;
 	}
@@ -514,7 +522,10 @@ static int dwmac4_del_hw_vlan_rx_fltr(st
 	/* Extended Rx VLAN Filter Enable */
 	for (i = 0; i < hw->num_vlan; i++) {
 		if ((hw->vlan_filter[i] & GMAC_VLAN_TAG_DATA_VID) == vid) {
-			ret = dwmac4_write_vlan_filter(dev, hw, i, 0);
+			if (!hw->promisc)
+				ret = dwmac4_write_vlan_filter(dev, hw, i, 0);
+			else
+				ret = 0;
 
 			if (!ret)
 				hw->vlan_filter[i] = 0;
